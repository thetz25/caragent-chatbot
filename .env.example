# ==========================================
# Production Environment Configuration
# ==========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git - it contains sensitive data!

# ==========================================
# Database Configuration (REQUIRED)
# ==========================================
POSTGRES_PASSWORD=your_secure_database_password_here
# Note: In production, use a strong password (20+ characters, mixed case, numbers, symbols)

# ==========================================
# Domain Configuration (REQUIRED for HTTPS)
# ==========================================
DOMAIN=your-domain.com
# Example: mitsubishi-chatbot.yourcompany.com
# For local development, use: localhost

# ==========================================
# Meta/Facebook Messenger Configuration (REQUIRED)
# ==========================================
# Get these from https://developers.facebook.com/apps
META_PAGE_ACCESS_TOKEN=your_actual_page_access_token_here
META_VERIFY_TOKEN=your_webhook_verify_token_here
META_APP_SECRET=your_app_secret_here

# ==========================================
# LLM Configuration (OPTIONAL)
# ==========================================
# Required for AI-powered intent detection and FAQ answering
# Get API key from https://platform.openai.com
OPENAI_API_KEY=your_openai_api_key_here
# Optional: LLM_PROVIDER=openai
# Optional: LLM_MODEL=gpt-3.5-turbo

# ==========================================
# Rate Limiting Configuration (OPTIONAL)
# ==========================================
# Adjust based on your expected traffic
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute
WEBHOOK_RATE_LIMIT_MAX=1000
WEBHOOK_RATE_LIMIT_WINDOW=1 minute

# ==========================================
# Admin Panel Configuration (OPTIONAL)
# ==========================================
# Required for accessing admin endpoints (upload photos, manage cars, view quotes)
# Generate a secure random key: openssl rand -hex 32
ADMIN_API_KEY=your-secure-admin-api-key-here
# UPLOAD_DIR=/app/uploads  # Optional: defaults to /app/uploads

# ==========================================
# Application Configuration (OPTIONAL)
# ==========================================
# In production docker-compose, NODE_ENV is set to production
# LOG_LEVEL=info

# ==========================================
# Webhook URL (for reference)
# ==========================================
# Production: https://your-domain.com/webhook
# Development: https://your-ngrok-url.ngrok.io/webhook
